<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MoodJournal.Components.Layout.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MoodJournal.Components.Layout.MainLayout)">
            <div class="card">
                <h2 style="margin:0 0 8px 0;">Page not found</h2>
                <p style="margin:0;color:var(--muted);">That route doesn’t exist.</p>
            </div>
        </LayoutView>
    </NotFound>
</Router>