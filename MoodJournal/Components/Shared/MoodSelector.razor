<MudChipSet T="Mood"
            SelectionMode="SelectionMode.SingleSelection"
            SelectedValue="@SelectedMood"
            SelectedValueChanged="OnSelectedChanged"
            Class="mj-moodset">

    <MudChip T="Mood" Value="Mood.Happy" Variant="Variant.Outlined" Class="mj-moodchip">Happy</MudChip>
    <MudChip T="Mood" Value="Mood.Calm" Variant="Variant.Outlined" Class="mj-moodchip">Calm</MudChip>
    <MudChip T="Mood" Value="Mood.Neutral" Variant="Variant.Outlined" Class="mj-moodchip">Neutral</MudChip>
    <MudChip T="Mood" Value="Mood.Sad" Variant="Variant.Outlined" Class="mj-moodchip">Sad</MudChip>
    <MudChip T="Mood" Value="Mood.Anxious" Variant="Variant.Outlined" Class="mj-moodchip">Anxious</MudChip>

</MudChipSet>

@code {
    [Parameter] public Mood SelectedMood { get; set; } = Mood.Neutral;
    [Parameter] public EventCallback<Mood> SelectedMoodChanged { get; set; }

    private Task OnSelectedChanged(Mood value) => SelectedMoodChanged.InvokeAsync(value);

    public enum Mood { Happy, Calm, Neutral, Sad, Anxious }
}