@page "/"
@using MoodJournal.Components.Shared
@using MudBlazor

<div class="mj-center">
    <MudPaper Elevation="0" Class="mj-card">

        <MudStack Spacing="3">
            <div>
                <MudText Typo="Typo.h4" Class="mj-title">Today's Entry</MudText>
            </div>

            <MudStack Spacing="2">
                <MudText Typo="Typo.subtitle1" Class="mj-section">How are you feeling?</MudText>
                <MoodSelector SelectedMood="@_currentMood" SelectedMoodChanged="m => _currentMood = m" />
            </MudStack>

            <MudTextField @bind-Value="_entryTitle"
                          Label="Title (optional)"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense" />

            <MudTextField @bind-Value="_entryContent"
                          Label="What stood out today?"
                          Variant="Variant.Outlined"
                          Lines="10" />

            
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       Size="Size.Large"
                       Class="mj-save-btn"
                       OnClick="SaveEntry">
                Save Entry
            </MudButton>
        </MudStack>

    </MudPaper>
</div>

@code {
    private string _entryTitle = "";
    private string _entryContent = "";
    private MoodSelector.Mood _currentMood = MoodSelector.Mood.Neutral;

    private void SaveEntry()
    {
        // later: call JournalService to persist
    }
}